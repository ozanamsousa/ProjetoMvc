@model ProjetoMvc.Models.Contato
@{
    ViewData["Title"] = "Editar Contatos";
}

<h1>Editar novo Contato</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control"/>    
        </div>
        <div class="form-group">
            <label asp-for="Telefone" class="control-label"></label>
            <input asp-for="Telefone" class="form-control"/>   
        </div>
        <div class="form-group">
            <label asp-for="Ativo" class="control-label"></label>
            <input asp-for="Ativo" class="form-check-input"/>    
        </div>
        <br>
        <div class="form-group">
            <input type="submite" value="Criar" class="btn btn-primary" />
        </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>


